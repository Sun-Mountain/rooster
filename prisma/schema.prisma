generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

enum Role {
  USER
  ADMIN
  SUPER
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

model Address {
  id        String  @id @default(cuid())
  userId    String  @unique
  street    String
  street2   String?
  city      String
  state     String
  zipCode   String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model EmergencyContact {
  id              String  @id @default("e-${cuid()}")
  userId          String  @unique
  firstName       String
  lastName        String
  relationship    String
  phoneNum        Phone?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Phone {
  id        String  @id @default(cuid())
  userId    String? @unique
  contactId String? @unique
  areaCode  String
  prefix    String
  lineNum   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user              User?             @relation(fields: [userId], references: [id])
  emergencyContact  EmergencyContact? @relation(fields: [contactId], references: [id])
}

model User {
  id                  String  @id @default("u-${cuid()}")
  firstName           String
  lastName            String
  email               String   @unique
  password            String
  address             Address?
  phoneNum            Phone?
  emergencyContact    EmergencyContact?
  role      Role      @default(USER)
  status    Status    @default(ACTIVE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

}