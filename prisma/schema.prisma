generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // You can safely ignore the error on this line.
}

enum Role {
  USER
  ADMIN
  SUPER
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model Address {
  id        String  @id @default(cuid())
  userId    String  @unique
  street    String
  street2   String?
  city      String
  state     String
  zipCode   String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map ("addresses")
}

model Class {
  id            String  @id @default(cuid())
  title         String
  details       ClassDetails[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map ("classes")
}

model ClassDayTime {
  id          String  @id @default(cuid())
  classId     String @unique
  weekday     Weekday?
  date        DateTime?
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  class ClassDetails @relation(fields: [classId], references: [id])

  @@map ("class_day_times") 
}

model ClassDetails {
  id          String  @id @default(cuid())
  classId     String  @unique
  description String?
  dayTimes    ClassDayTime[]
  workshop    Boolean @default(false)
  Session     Session? @relation(fields: [sessionId], references: [id])
  sessionId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  class Class @relation(fields: [classId], references: [id])

  @@map ("class_details")
}

model EmergencyContact {
  id              String  @id @default(cuid())
  userId          String  @unique
  firstName       String
  lastName        String
  relationship    String?
  phoneNum        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  @@map ("emergency_contacts")
}

model Session {
  id          String  @id @default(cuid())
  title       String
  description String?
  classes     ClassDetails[]
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map ("sessions")
}

model User {
  id                  String  @id @default(cuid())
  firstName           String
  lastName            String
  email               String   @unique
  password            String
  address             Address?
  emergencyContact    EmergencyContact?
  phoneNum            String?
  role      Role      @default(USER)
  status    Status    @default(ACTIVE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map ("users")
}